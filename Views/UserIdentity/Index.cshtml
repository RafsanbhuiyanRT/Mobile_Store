@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-4">
                        <form>
                            <div class="row g-3 align-items-center mb-3">
                                <div class="col-3">
                                    <label for="refrence" class="col-form-label">Reference </label>
                                </div>
                                <div class="col-auto">
                                    <input type="text" class="form-control" id="refrence" />
                                </div>
                            </div>

                            <div class="row g-3 align-items-center mb-3">
                                <div class="col-3">
                                    <label for="phone" class="form-label">Phone </label>
                                </div>
                                <div class="col-auto">
                                    <input type="text" class="form-control" id="phone" />
                                </div>
                            </div>                  

                            <div class="row g-3 align-items-center mb-3">
                                <div class="col-3">
                                    <label for="address" class="form-label">Address  </label>
                                </div>
                                <div class="col-auto">
                                    <form name="form1" id="form1">
                                        <select name="subject" id="subject">
                                            <option value="" selected="selected"> district</option>
                                        </select>

                                        <select name="topic" id="topic">
                                            <option value="" selected="selected"> zila </option>
                                        </select>

                                        <select name="chapter" id="chapter">
                                            <option value="" selected="selected"> thana</option>
                                        </select>
                                    </form>
                                </div>
                            </div>
                        </form> @* left part *@
                    </div>
                    <div class="col-4"> @* middle part *@
                    </div>
                    <div class="col-4">
                        @* this is last 4 col *@
                        <div class="row g-3 align-items-center mb-3">
                            <div class="col-3">
                                <label for="supplier" class="col-form-label">Supplier </label>
                            </div>
                            <div class="col-auto">
                                <input type="text" class="form-control" id="supplier" />
                            </div>
                        </div>

                        <div class="row g-3 align-items-center mb-3">
                            <div class="col-3">
                                <label for="orderNo" class="col-form-label">Order No </label>
                            </div>
                            <div class="col-auto">
                                <input type="number" class="form-control" id="orderNo" />
                            </div>
                        </div>

                        <div class="row g-3 align-items-center mb-3">
                            <div class="col-3">
                                <label for="dateTime" class="col-form-label">DateTime </label>
                            </div>
                            <div class="col-auto">
                                <input type="datetime" class="form-control" id="dateTime" />
                            </div>
                        </div>
                    </div> @* right part *@
                </div>
                <div class="table-responsive"> @* value input table *@
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">
                                   
                                    <input type="text" class="form-control" id="item" placeholder="Enter item name" />
                                </th>
                                <th class="text-center">
                                  
                                    <input type="number" class="form-control" id="quantity" placeholder="Enter item quantity" />
                                </th>
                                <th class="text-center">
                                  
                                    <input type="number" class="form-control" id="UnitPrice" placeholder="Enter item UnitPrice" />
                                </th>
                                <th class="d-flex justify-content-center">
                                    <button class="btn btn-primary">Add item</button>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Table body  -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-body">
                  <div class="table-responsive">
                      <table class="table table-bordered table-hover">
                          <thead>
                              <tr>
                                  <th class="text-center">Item</th>
                                  <th class="text-center">Quantity</th>
                                  <th class="text-center">Unit Price</th>
                              </tr>
                          </thead>
                      </table>
                  </div>
               
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-end mt-1">
                    <button class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
