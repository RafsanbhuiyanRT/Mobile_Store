@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center">Product</h4>
            </div>

            <div class="card-body justify-content-center">
                <form id="productfrm">
                    <div class="row justify-content-between">
                        <div class="col-8">
                            <div class="row mb-3">
                                <label for="item" class="col-sm-4 col-form-label col-form-label-sm">Item</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control form-control-sm" id="item" name="item" placeholder="Enter item name">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="unitPrice" class="col-sm-4 col-form-label col-form-label-sm">Unit Price</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control form-control-sm" id="unitPrice" name="unitPrice" placeholder="Enter unit price">
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer ">
                <div class="d-flex justify-content-end">
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#supplierModal">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="supplierModal" tabindex="-1" aria-labelledby="labelTitle" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="labelTitle">Item save successfully. Do you want to addd supplier</h5>                                 @*  id="labelTitle" *@
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="supplierFrom">
                    <div class="row">
                        <input type="hidden" id="id" />
                        <div class="row mb-3">
                            <label for="supplier" class="col-sm-3 col-form-label col-form-label-sm text-center">Supplier</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control form-control-sm" id="supplier" name="supplier" placeholder="Enter supplier name">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSave" data-bs-dismiss="modal">Save</button>   @* id="btnSave" *@
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#btnSave").click(function (el) {
            el.preventDefault();
            if (!$('#productfrm').valid()) {
                return;
            }
            let data = {
                item: $('#item').val(),
                unitPrice: $('#unitPrice').val()
            };

            $.ajax({
                url: '/UserIdentity/Create',
                type: 'post',
                data: data,
                success: function (data) {

                    $('#productFrm').trigger('reset');
                    $('#btnSave').text('Save');
                },
                error: function (a, b, c) {

                }
            });

        });

    </script>

}
