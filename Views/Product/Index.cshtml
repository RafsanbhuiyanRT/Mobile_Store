  @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <h3 class="text-dark">Product</h3>
                    </div>
                    <div class="col-6 text-end">
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#productModal">Create product</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="table">
                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th class="text-center">Name</th>
                                <th class="text-center">Brand</th>
                                <th class="text-center">Modal</th>
                                <th class="text-center">Category</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Description</th>
                                <th class="text-center">Image</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>                       
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="productModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frm">
                    <input type="hidden" id="Id" name="Id" />

                    <div class="mb-2 row">
                        <label for="name" class="col-sm-3 col-form-label col-form-label-sm">Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control form-control-sm" id="name" name="name" placeholder="Enter product name">
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="brand" class="col-sm-3 col-form-label col-form-label-sm">Brand</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control form-control-sm" id="brand" name="brand" placeholder="Enter brand name">
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="modal" class="col-sm-3 col-form-label col-form-label-sm">Model</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control form-control-sm" id="modal" name="modal" placeholder="Enter model name">
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="category" class="col-sm-3 col-form-label col-form-label-sm">Category</label>
                        <div class="col-sm-8">
                            <select class="form-select" id="category" name="categoryId">
                                <option value="" selected="selected">Select Category</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="price" class="col-sm-3 col-form-label col-form-label-sm">Price</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control form-control-sm" id="price" name="price" placeholder="Enter product price">
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="description" class="col-sm-3 col-form-label col-form-label-sm">Description</label>
                        <div class="col-sm-8">
                            <textarea rows="3" class="form-control form-control-sm" id="description" name="description" placeholder="Write something"></textarea>
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="image" class="col-sm-3 col-form-label col-form-label-sm">Upload Image</label>
                        <div class="col-sm-8">
                            <input type="file" class="form-control form-control-sm" id="image" name="image" accept="image/*">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveBtn">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var el = {
            form: {
                id: $('#frm'),
                main: {
                    name: $('#name'),
                    brand: $('#brand'),
                    modal: $('#modal'),
                    category: $('#category'),
                    price: $('#price'),
                    description: $('#description'),
                    image: $('#image')
                },           
                btn: {
                    saveBtn: $('#saveBtn'),
                }
            },
            modal: {
                product: $('#productModal'),

            }
        };

        function getCategory() {
            $.ajax({
                url: '/Category/GetDropDownCategory',
                type: 'get',
                success: function (data) {
                    let option = '';
                    $.each(data, function (key, val) {
                        option += `<option value="${val.value}">${val.text}</option>`;
                    });
                    el.form.main.category.empty();
                    el.form.main.category.append(option);
                }
            });
        }
        function getAllProduct() {
            $.ajax({
                url: '/Product/GetAll',
                type: 'get',
                success: function (data) {
                    console.log(data);
                    let loc = location.origin;
                    let tbody = '';
                    $.each(data, function (key, val) {
                        console.log(val);
                        console.log(loc + val.imagePaths);
                        tbody += `<tr>
                                       <td>${key + 1}</td>
                                       <td>${val.name}</td>
                                       <td>${val.brand}</td>
                                       <td>${val.modal}</td>
                                       <td>${val.categoryName}</td>
                                       <td>${val.price}</td>
                                       <td>${val.description}</td>
                                       <td><img src="${loc + val.imagePaths}" alt="Not found" height="30" width="30" /></td>
                                       <td class="d-flex justify-content-center">
                                           <a class="btn btn-primary btn-sm edit" data-id="${val.id}">Edit</a>
                                           <a class="btn btn-danger btn-sm delete" data-id="${val.id}">Delete</a>
                                       </td>
                                   </tr>`;
                    });
                    $('#table tbody').empty();
                    $('#table tbody').append(tbody);
                }
            });
        }

        $('#saveBtn').click(function (e) {
            e.preventDefault();
            var formdata = new FormData(document.getElementById('frm'));
           
            $.ajax({
                url: '/Product/Create',
                type:'post',
                data: formdata,
                caches: false,
                contentType: false,
                processData: false,
                //dataType: 'json', 
                success: function (e) {
                    debugger;
                    el.modal.product.modal('hide');
                    el.form.id.trigger('reset');
                },
                error: function(e){
                    console.log(e);
                }
            });
        });

        $(document).ready(function (e) {
            getCategory();
           
            el.form.main.category.select2({
                dropdownParent: $('#productModal')
            });
            getAllProduct();

        });
    </script>

   
}
