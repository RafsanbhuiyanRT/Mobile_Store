@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <h3 class="text-dark">Product</h3>
                    </div>
                    <div class="col-6 text-end">
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#productModal">Create product</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th class="text-center">Brand</th>
                                <th class="text-center">Modal</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Description</th>
                                <th class="text-center">Path</th>
                                <th class="text-center">Category</th>
                                <th class="text-center">Image</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="productModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frm">
                    <input type="hidden" id="editId" />

                    <div class="mb-2 row">
                        <label for="name" class="col-sm-3 col-form-label col-form-label-sm">Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control form-control-sm" id="name" placeholder="Enter product name">
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="brand" class="col-sm-3 col-form-label col-form-label-sm">Brand</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control form-control-sm" id="brand" placeholder="Enter brand name">
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="modal" class="col-sm-3 col-form-label col-form-label-sm">Model</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control form-control-sm" id="modal" placeholder="Enter model name">
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="category" class="col-sm-3 col-form-label col-form-label-sm">Category</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control form-control-sm" id="category" placeholder="Select Category">
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="price" class="col-sm-3 col-form-label col-form-label-sm">Price</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control form-control-sm" id="price" placeholder="Enter product price">
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="description" class="col-sm-3 col-form-label col-form-label-sm">Description</label>
                        <div class="col-sm-8">
                            <textarea rows="3" class="form-control form-control-sm" id="description" placeholder="Write something"></textarea>
                        </div>
                    </div>

                    <div class="mb-2 row">
                        <label for="imagePath" class="col-sm-3 col-form-label col-form-label-sm">Upload Image</label>
                        <div class="col-sm-8">
                            <input type="file" class="form-control form-control-sm" id="imagePath" accept="image/*">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
